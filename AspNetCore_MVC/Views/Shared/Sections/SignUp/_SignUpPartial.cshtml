<section class="SignupTitle">
    <div class="container">
        <h1>Create Account</h1>
        <p>Already have an account? Sign in <a href="#">here</a>.</p>
    </div>
</section>

<section class="Signupform">
    <div class="container">
        <form action="" method="">
            <div class="forminfo">



                <div class="First">
                    <div>
                        <label for="name"><b>First Name</b></label>
                    </div>
                    <input type="text" placeholder="Enter First Name" name="FirstName" required>
                </div>

                <div class="Last">
                    <div>
                        <label for="name"><b>Last name</b></label>
                    </div>
                    <input type="text" placeholder="Enter Last Name" name="LastName" required>
                </div>

                <div class="Email input">
                    <div>
                        <label for="email"><b>Email</b></label>
                    </div>
                    <input type="text" placeholder="Enter Email" name="email" required>
                </div>

                <div class="PassW input">
                    <div>
                        <label for="psw"><b>Password</b></label>
                    </div>
                    <input type="password" placeholder="Enter Password" name="psw" required>
                </div>

                <div class="PassWR">
                    <div>
                        <label for="psw-repeat"><b>Repeat Password</b></label>
                    </div>
                    <input type="password" placeholder="Repeat Password" name="psw-repeat" required>
                </div>

                <div class="remember">
                    <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px">By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.
                </div>

                <div class="btnSignup">
                    <a class="btn-theme" href="#"><span>Sign up</span></a>
                </div>

            </div>
        </form>
    </div>
</section>

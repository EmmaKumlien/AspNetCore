<header>
    <div class="container">
        <a id="logo" asp-controller="Home" asp-action="Index"><img src="~/images/SiliconLogotype_Light.svg" alt="Logotype"></a>
        <div id="menu">
            <nav>
                <a class="menu-link" asp-action="Index" asp-controller="Home">Home</a>
                <a class="menu-link" asp-action="Index" asp-controller="Courses">Courses</a>
                <a class="menu-link" asp-action="Index" asp-controller="Account">Account</a>

            </nav>

        </div>
        <div class="btn-switch">
            <label>Light</label>
            <label class="switch" for="switch-mode">
                <input type="checkbox" id="switch-mode" />
                <span class="slider round"></span>
            </label>
            <label>Dark</label>

        </div>
        <div class="account-buttons">
            <a class="btn-gray" asp-controller="Auth" asp-action="SignIn"><i class="fa-solid fa-right-to-bracket"></i><span>Sign in</span></a>
            <a class="btn-theme" asp-controller="Auth" asp-action="SignUp"><i class="fa-regular fa-user"></i><span>Sign up</span></a>

        </div>

        <button class="btn-mobile">
            <i class="fa-solid fa-bars"></i>
        </button>
    </div>
</header>